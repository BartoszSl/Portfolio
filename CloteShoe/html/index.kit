<!DOCTYPE html>
<html lang="pl">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>CloteShoe</title>
		<!-- @include 'styles.kit' -->
	</head>
	<body>
		<!-- @include 'nav.kit' -->

		<header id="home" class="header">
			<div class="hero-img">
				<div class="hero-shadow"></div>
				<div class="wrapper hero-text">
					<h1 class="main-color">Najlepsze ciuchy</h1>
					<p>Znajdziesz już tylko u nas!</p>
					<a href="#aboutus" type="button" class="btn btn-outline-light"
						>Produkty
						<img src="dist/img/icon/arrow.svg" alt="arrow img" />
					</a>
				</div>
			</div>
		</header>

		<main>
			<section class="section best">
				<div class="wrapper">
					<h2 class="section__title">Najlepszy produkt</h2>
				</div>
				<div class="best__cart section__cart">
					<div class="wrapper section__item">
						<div class="section__item--left">
							<img
								src="dist/img/czapkaZDaszkiem.jpg"
								alt="Czapka z daszkiem - Bestseller"
							/>
						</div>
						<div class="section__item--right">
							<div class="best-text">
								<p>
									<span class="bold">Typ: </span
									><span class="secondary-color">Czapka z daszkiem</span>
								</p>
								<p>
									<span class="bold">Model: </span
									><span class="secondary-color">BG-2</span>
								</p>
								<p>
									<span class="bold">Kolor: </span
									><span class="secondary-color">Biało - Niebieski</span>
								</p>
								<p>
									<span class="bold">Ocena: </span
									><span class="gold"
										>4.8
										<i class="fa-solid fa-star"></i>
									</span>
									(45)
								</p>
								<p>
									<span class="bold">Cena: </span
									><span class="secondary-color">$13</span>
								</p>
							</div>
							<div class="best-more">
								<p><i class="fa-solid fa-location-dot"></i> German</p>

								<a
									href="#aboutus"
									type="button"
									class="section__cart-btn btn-outline-light"
									>Czytaj więcej
								</a>
							</div>
						</div>
					</div>
				</div>
			</section>

			<section class="section all">
				<div class="wrapper">
					<h2 class="section__title">Przeglądaj wszystkie</h2>
				</div>
				<div class="all__cart section__cart">
					<div class="all__items wrapper">

						<div class="all__items-item">
							<div class="img">
								<img src="/dist/img/t-shirt.jpg" alt="Koszulka" />
								<div class="shadow">
									<div class="content">
										<p class="title"><span class="bold">Koszulki</span> $29</p>

										<p class="location"></p>
										<p><i class="fa-solid fa-location-dot"></i> Poland</p>
										<a
											href="#aboutus"
											type="button"
											class="section__cart-btn btn-outline-light"
											>Czytaj więcej
										</a>
									</div>
								</div>
							</div>
						</div>
				</div>
			</section>
		</main>

		<!-- @include 'footer.kit' -->
		<!-- @include 'script.kit' -->
	</body>
</html>
